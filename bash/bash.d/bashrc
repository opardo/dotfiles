#!/usr/bin/env bash

export PATH=/usr/local/bin:/usr/bin:/usr/sbin:/usr/texbin:/bin:/sbin:/Users/Omar/.local/bin:$PATH

alias ls='ls -lGF'
alias lsall='ls -flaF'
alias R='R --no-save'
alias r='R --no-save'
alias p='cd ~/Projects'
alias matlab='/Applications/MATLAB_R2013a.app/bin/matlab'

export BASH_IT=$HOME/.bash_it
export BASH_IT_THEME='minimal'

source $BASH_IT/bash_it.sh
source '~/.bash.d/scripts/git-completion.bash'
source '~/Projects/Google Cloud/google-cloud-sdk/path.bash.inc'
source '~/Projects/Google Cloud/google-cloud-sdk/completion.bash.inc'

# File/dir size
function fs() {
    if du -b /dev/null > /dev/null 2>&1; then
        local arg=-sbh
    else
        local arg=-sh
    fi
    if [[ -n "$@" ]]; then
        du $arg -- "$@"
    else
        du $arg .[^.]* *
    fi
}
