## Path
export PATH=/usr/local/bin:/usr/bin:/usr/sbin:/usr/texbin:/bin:/sbin:~/.rvm/bin:/Library/Frameworks/Python.framework/Versions/3.0/bin:$PATH

## Aliases
alias ls='ls -lGF'
alias lsall='ls -flaF'
alias show='qlmanage -p'
alias R='R --no-save'
alias r='R --no-save'
alias matlab='/Applications/MATLAB_R2013a.app/bin/matlab'

## Git completion
source ~/.bash.d/scripts/git-completion.bash

## Size of file or directory
function fs() {
    if du -b /dev/null > /dev/null 2>&1; then
        local arg=-sbh
    else
        local arg=-sh
    fi
    if [[ -n "$@" ]]; then
        du $arg -- "$@"
    else
        du $arg .[^.]* *
    fi
}

