;; Load path
(add-to-list 'custom-theme-load-path "~/.emacs.d/themes/solarized/")
(let ((default-directory "~/.emacs.d/"))
  (normal-top-level-add-subdirs-to-load-path))

;; Variables
(setq backup-directory-alist (quote ((".*" . "~/.emacs.d/backups/"))))
(setq default-major-mode 'text-mode)  ;; Default mode: Text-mode
(setq inhibit-startup-message t)      ;; Remove startup message
(setq standard-indent 4)
(setq-default fill-column 80)
(setq-default indent-tabs-mode nil)   ;; Indent with spaces
(toggle-scroll-bar -1)                ;; Remove scrollbar
(tool-bar-mode -1)                    ;; Remove toolbar

;; Minor modes
(global-font-lock-mode t) ;; Syntax highlighting
(global-hl-line-mode 1)   ;; Highlight current line
(global-linum-mode t)     ;; Show line numbers
(iswitchb-mode 1)

;; Shortcuts
(global-set-key (kbd "C-c b") 'ibuffer)
(global-set-key (kbd "C-c g") 'goto-line) 
(global-set-key (kbd "C-c i") 'indent-region)
(global-set-key (kbd "C-c m") 'uncomment-region)
(global-set-key (kbd "C-c n") 'comment-region)
(global-set-key (kbd "C-c o") 'start-kbd-macro)
(global-set-key (kbd "C-c p") 'end-kbd-macro)
(global-set-key (kbd "C-q") 'query-replace)
(global-set-key (kbd "C-x C-k") 'kill-buffer)
(global-set-key (kbd "C-z") 'call-last-kbd-macro)

;; Solarized theme
(load-theme 'solarized-dark t)

;; Font
(custom-set-faces
 '(default ((t (:height 140 :family "Droid Sans Mono")))))
